@model MusicPlatform.Models.HomeModels.SearchViewModel;
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h1 class="display-3 ">@Model.Title</h1>
            </div>
           
        </div>
    </div>

    @{
        int totalSongs = Model.Songs.Count;
        int songsPerRow = 3;
        int songRowIndex = 0;
    }
    @for (int i = 0; i < totalSongs; i += songsPerRow)
    {
        <div class="row">
            @for (int j = i; j < i + songsPerRow && j < totalSongs; j++)
            {
                var song = Model.Songs[j];

                <div class="col-4 mb-3">
                    <div class="card" style="width: 18rem;">

                        <div class="card-body">
                            <h5 class="card-title">@song.Name</h5>
                            <p class="card-text">Artist: @song.Artist.Name</p>
                            <a asp-action="Index" asp-controller="Artist" asp-route-id="@song.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
   
</div>