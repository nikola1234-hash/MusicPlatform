


@model MusicPlatform.Models.AdminModels.UsersViewModel;
<div class="text-center">
    <h3 >User details:</h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Registered</th>
            <th scope="col">*</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model.Users)
        {
            <tr>
                
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.DateCreated</td>
                <td><button type="button" data-bs-toggle="modal" data-user="@user.Id" onclick="getUserFavorites('@user.Id')" data-bs-target="#exampleModalLong" id="favorite-button" class="btn btn-primary">Show Favorites</button></td>
            </tr>
        }
       
       
    </tbody>
</table>




<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Artist</th>
                            <th scope="col">Song name</th>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                      

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
